# E2E 测试专用 Dockerfile
FROM node:22-alpine

# 安装系统依赖
RUN apk add --no-cache \
    libc6-compat \
    bash \
    curl \
    git

# 设置工作目录
WORKDIR /app

# 安装 pnpm
RUN npm install -g pnpm

# 复制依赖文件
COPY package.json pnpm-lock.yaml ./

# 安装依赖
RUN pnpm install --frozen-lockfile

# 复制项目文件
COPY . .

# 构建应用
RUN pnpm build

# 暴露端口
EXPOSE 3000

# 启动命令
CMD ["pnpm", "start"]