{
  "name": "jikns-blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "prisma generate && next build",
    "dev": "next dev -p 3999 -H 0.0.0.0",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:css": "stylelint --allow-empty-input \"app/**/*.css\" \"components/**/*.css\" \"styles/**/*.css\"",
    "start": "next start",
    "vitest": "NODE_OPTIONS='--max-old-space-size=8192 --expose-gc' node scripts/run-vitest-sharded.mjs",
    "test": "pnpm vitest",
    "test:watch": "pnpm vitest --watch",
    "test:auth": "pnpm vitest run tests/auth/",
    "test:auth:watch": "pnpm vitest watch tests/auth/",
    "test:auth:coverage": "pnpm vitest run tests/auth/ --coverage",
    "test:auth:tdd": "./tests/scripts/run-auth-tests.sh",
    "test:permissions": "./tests/scripts/run-permission-tests.sh",
    "test:api:follow-list": "pnpm vitest run tests/api/follow-list-route.test.ts tests/integration/follow-list-privacy.test.ts tests/hooks/use-follow-list.test.ts --coverage --coverage.include \"app/api/users/[userId]/follow-list-handler.ts\" --coverage.include \"hooks/use-follow-list.ts\" --coverage.include \"lib/permissions/follow-permissions.ts\" --reporter=verbose",
    "test:api:user-interactions": "pnpm vitest run tests/api/likes-route.test.ts tests/api/user-interactions-compat.test.ts tests/unit/likes-service.test.ts tests/unit/activity-permissions.test.ts tests/unit/comment-permissions.test.ts tests/integration/likes-consistency.test.ts --coverage --coverage.threshold.lines=90 --coverage.threshold.branches=90 --coverage.include \"app/api/likes/route.ts\" --coverage.include \"app/api/user/interactions/route.ts\" --coverage.include \"lib/interactions/likes.ts\" --coverage.include \"lib/permissions/activity-permissions.ts\" --coverage.include \"lib/permissions/comment-permissions.ts\" --reporter=verbose",
    "test:permissions:unit": "./tests/scripts/run-permission-tests.sh unit",
    "test:permissions:integration": "./tests/scripts/run-permission-tests.sh integration",
    "test:permissions:coverage": "./tests/scripts/run-permission-tests.sh coverage",
    "test:permissions:performance": "./tests/scripts/run-permission-tests.sh performance",
    "test:permissions:watch": "pnpm vitest watch tests/integration tests/unit",
    "test:permissions:full": "tsx scripts/test-permissions.ts",
    "test:permissions:security": "pnpm vitest run tests/integration/security-edge-cases.test.ts",
    "test:permissions:components": "pnpm vitest run tests/integration/component-permissions.test.tsx",
    "test:permissions:e2e": "playwright test tests/e2e/permissions-e2e.spec.ts",
    "test:archive:coverage": "pnpm vitest run --config vitest.archive.config.ts --coverage --coverage.reporter=text-summary",
    "test:all": "pnpm vitest run tests/ --coverage",
    "test:ci": "pnpm vitest run --coverage --reporter=json --reporter=text",
    "test:coverage:permissions": "pnpm vitest run tests/integration/middleware*.test.ts tests/integration/permissions*.test.ts tests/integration/api-permissions*.test.ts tests/integration/security*.test.ts --coverage --coverage.reporter=html --coverage.reporter=text-summary",
    "test:coverage:report": "tsx scripts/test-permissions.ts && open coverage/permissions-test-report.html",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "seed:user-space": "tsx scripts/seed-user-space.ts",
    "supabase:start": "supabase start",
    "supabase:stop": "supabase stop",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:critical": "pnpm vitest run tests/auth-core-stable.test.ts tests/security/phase4-basic.test.ts tests/unit/utils-basic.test.ts",
    "test:coverage": "pnpm vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "quality:check": "pnpm lint:check && pnpm type-check && pnpm format:check && pnpm test:critical",
    "quality:fix": "pnpm lint && pnpm format && pnpm test:critical",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:check": "pnpm security:audit && pnpm test:security",
    "test:security": "pnpm vitest run tests/security/ tests/integration/security*.test.ts",
    "search:tokens:backfill": "tsx scripts/backfill-search-tokens.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
