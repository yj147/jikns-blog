{
  "extends": ["next/core-web-vitals"],
  "root": true,
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "eqeqeq": ["error", "always"]
  },
  "overrides": [
    {
      "files": [
        "tests/**/*",
        "tests_disabled/**/*",
        "SuperClaude_Framework/**/*",
        "scripts/**/*",
        "*.test.ts",
        "*.test.tsx",
        "*.spec.ts",
        "*.spec.tsx"
      ],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
